{
    "$schema": "http://json-schema.org/schema#",
    "title": "Dialog",
    "description": "A dialog component's schema definition.",
    "type": "object",
    "id": "dialog",
    "children": true,
    "properties": {
        "describedBy": {
            "title": "Aria-describedby attribute",
            "type": "string",
            "example": "exampleId01"
        },
        "label": {
            "title": "Aria-label attribute",
            "type": "string",
            "example": "Dialog label"
        },
        "labelledBy": {
            "title": "Aria-labelledby attribute",
            "type": "string",
            "example": "exampleId02"
        },
        "contentHeight": {
            "title": "Content region height",
            "type": "string",
            "example": "300px"
        },
        "contentWidth": {
            "title": "Content region width",
            "type": "string",
            "example": "500px"
        },
        "modal": {
            "title": "Modal",
            "type": "boolean"
        },
        "visible": {
            "title": "Visible",
            "type": "boolean"
        }
    }
}
