{
    "$schema": "http://json-schema.org/schema#",
    "title": "Carousel",
    "description": "A carousel component's schema definition.",
    "type": "object",
    "id": "carousel",
    "properties": {
        "label": {
            "title": "Carousel accessible label",
            "type": "string"
        },
        "activeId": {
            "title": "Set active slide by HTML id attribute",
            "type": "string"
        },
        "items": {
            "title": "Slides",
            "type": "array",
            "items": {
                "title": "Slide",
                "type": "object",
                "properties": {
                    "tabItemSlot": {
                        "title": "Tab item slot",
                        "type": "string",
                        "default": "tab-item"
                    },
                    "tabPanelSlot": {
                        "title": "Tab panel slot",
                        "type": "string",
                        "default": "tab-panel"
                    },
                    "tabSlot": {
                        "title": "Tab slot",
                        "type": "string",
                        "default": "tab"
                    }
                }
            }
        }
    }
}
